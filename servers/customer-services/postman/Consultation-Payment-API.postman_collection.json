        {
          "name": "Get Available Packages",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.length > 0) {",
                  "        pm.environment.set('packageId', response.data[0]._id);",
                  "        console.log('Package ID saved:', response.data[0]._id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/billing/packages?featured=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "billing", "packages"],
              "query": [
                {
                  "key": "featured",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Get All Active Packages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/billing/packages",
              "host": ["{{baseUrl}}"],
              "path": ["api", "billing", "packages"]
