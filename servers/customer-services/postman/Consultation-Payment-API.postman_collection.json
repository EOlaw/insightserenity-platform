              "mode": "raw",
              "raw": "{\n  \"packageId\": \"{{packageId}}\",\n  \"amount\": 45000,\n  \"currency\": \"USD\",\n  \"quantity\": 1,\n  \"paymentMethodId\": \"pm_card_visa\",\n  \"savePaymentMethod\": true\n}",
