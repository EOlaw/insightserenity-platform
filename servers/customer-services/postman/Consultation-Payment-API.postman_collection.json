              "raw": "{{baseUrl}}/api/billing/payments/{{transactionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "billing", "payments", "{{transactionId}}"]
            }
          }
        },
        {
          "name": "Get Payment History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/billing/payments/client/{{clientId}}/history?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "billing", "payments", "client", "{{clientId}}", "history"],
